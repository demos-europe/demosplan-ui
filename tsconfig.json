{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": false,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*.ts",
    // "./src/**/*.tsx", // Otherwise it gets compiled during build which trows errors
    "./src/**/*.vue",
    "./tests/**/*.ts",
    // "./tests/**/*.tsx", // Otherwise it gets compiled during build which trows errors
    "./vue-shims.d.ts"
  ]
}
